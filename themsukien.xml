<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/texteven"
        android:layout_width="365dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="596dp"
        android:ems="10"
        android:hint="Nội dung của sự kiện"
        android:inputType="textPersonName"
        android:textColorLink="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/timeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="469dp"
        android:layout_marginBottom="222dp"
        android:ems="10"
        android:hint="Thời gian sảy ra"
        android:inputType="time"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="85dp"
        android:layout_height="72dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/img_68528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_add_event"
        android:layout_width="328dp"
        android:layout_height="71dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="Thêm sự kiện"
        android:textColor="@color/design_default_color_secondary"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="194dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="138dp"
        android:text="Tên Tiêu Đề"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColorLink="@color/white"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/title"
        android:layout_width="365dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="211dp"
        android:ems="10"
        android:hint="Tên tiêu đề"
        android:inputType="textPersonName"
        android:textColorLink="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="282dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="314dp"
        android:text="Cài Đặt Thời Gian"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColorLink="@color/white"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="220dp"
        android:layout_height="38dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="547dp"
        android:text="Nội Dung"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColorLink="@color/white"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/insert"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="27dp"
        android:background="@null"
        android:contentDescription="@string/appbar_scrolling_view_behavior"
        android:scaleType="centerCrop"
        android:src="@drawable/them"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/timetb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="401dp"
        android:ems="10"
        android:hint="Thời gian thông báo"
        android:inputType="time"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
